<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="alice.tuprologx.android"
    android:versionCode="2"
    android:versionName="1.0" >
    <uses-sdk android:minSdkVersion="10"/>

    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name" >
        <activity
            android:label="@string/app_name"
            android:name="SplashScreen" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:label="@string/app_name"
            android:name="tuPrologActivity" >
            <intent-filter >
                <action android:name="android.intent.action.DEFAULT" />
                <category android:name="android.intent.category.VIEW" />
            </intent-filter>
        </activity>
        <activity
            android:label="@string/app_name"
            android:name="TheoryListActivity" >
        </activity>
        <activity
            android:label="@string/app_name"
            android:name="TheoryEditActivity" >
        </activity>
        <activity
            android:label="@string/app_name"
            android:name="TheoryImportListActivity" >
        </activity>
        <activity
            android:label="@string/app_name"
            android:name="alice.tuprologx.android.TheoryFileBrowserActivity" >
        </activity>
    </application>
<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
</manifest>